{
    "policy": {
        "policy_id": "genomic-prod-cleanup-i1d-r31d",
        "description": "Genomic prod Index for 1 day (retention: 31 days).",
        "default_state": "genomic_prod_hot_state",
        "states": [
            {
                "name": "genomic_prod_hot_state",
                "actions": [
                    {
                        "retry": {
                            "count": 3,
                            "backoff": "exponential",
                            "delay": "1m"
                        },
                        "replica_count": {
                            "number_of_replicas": 1
                        }
                    }
                ],
                "transitions": [
                    {
                        "state_name": "genomic_prod_cold_state",
                        "conditions": {
                            "min_index_age": "1d"
                        }
                    }
                ]
            },
            {
                "name": "genomic_prod_cold_state",
                "actions": [
                    {
                        "retry": {
                            "count": 3,
                            "backoff": "exponential",
                            "delay": "1m"
                        },
                        "replica_count": {
                            "number_of_replicas": 1
                        }
                    }
                ],
                "transitions": [
                    {
                        "state_name": "genomic_prod_delete_state",
                        "conditions": {
                            "min_index_age": "31d"
                        }
                    }
                ]
            },
            {
                "name": "genomic_prod_delete_state",
                "actions": [
                    {
                        "retry": {
                            "count": 3,
                            "backoff": "exponential",
                            "delay": "1m"
                        },
                        "delete": {}
                    }
                ],
                "transitions": []
            }
        ],
        "ism_template": [
            {
                "index_patterns": [
                    "log-cloudtrails-*",
                    "security-auditlog-*"
                ],
                "priority": 0
            }
        ]
    }
}