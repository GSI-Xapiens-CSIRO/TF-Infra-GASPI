# SonarQube Configuration for GXC Atlantis Deploy
# Copy this file to sonarqube.env and update with your actual values

# SonarQube Server Configuration
SONAR_HOST_URL=http://your-sonarqube-server:9000
SONAR_TOKEN=your_sonarqube_authentication_token_here

# Project Configuration (optional - defaults will be generated based on environment)
# SONAR_PROJECT_KEY=gxc-gaspi-${ENVIRONMENT}
# SONAR_PROJECT_NAME=GXC-GASPI-${ENVIRONMENT^^}
# SONAR_PROJECT_VERSION=1.0.0

# Source Configuration (optional)
# SONAR_SOURCES=.
# SONAR_EXCLUSIONS=**/*.tfvars,**/*.tf.example,**/node_modules/**,**/.terraform/**,**/.git/**,**/.DS_Store,**/coverage/**,**/build/**,**/dist/**

# Scan Configuration (optional)
# SONAR_TIMEOUT=600
# SONAR_FAIL_ON_ERROR=true

# Atlantis Integration Configuration
SCRIPT_RUN_SONAR=true